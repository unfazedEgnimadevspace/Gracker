<section class="flex flex-col md:flex-row h-screen items-center mb-10 mt-5">

  <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen mb-4">
    <img src="https://img.freepik.com/free-vector/training-home-concept_52683-37093.jpg?size=626&ext=jpgg" alt="" class="w-full h-full object-cover">
  </div>

  <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">

    <div class="w-full h-100 bg-white">


      <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Sign Up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-10") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-3">
            <%= f.label :first_name, class: "block text-gray-700  text-sm" %>
           <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border border-indigo-200 focus:border-indigo-500 focus:bg-white focus:outline-none", placeholder: " John", required: true %>
        </div> 
        <div class="mt-3">
            <%= f.label :last_name, class: "block text-gray-700  text-sm" %>
           <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border border-indigo-200 focus:border-indigo-500 focus:bg-white focus:outline-none", placeholder: "Doe", required: true %>
        </div> 
        <div class="mt-3">
            <%= f.label :email, class: "block text-gray-700  text-sm" %>
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border border-indigo-200 focus:border-indigo-500 focus:bg-white focus:outline-none", placeholder: "yourexample@gracker.com", required: true %>
        </div> 
        <div class="mt-3">
            <%= f.label :password, class: "block text-gray-700  text-sm" %>
           <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border border-indigo-200 focus:border-indigo-500 focus:bg-white focus:outline-none", placeholder: "••••••••", required: true %>
        </div> 
        <div class="mt-3">
            <%= f.label :password_confirmation, class: "block text-gray-700 text-sm" %>
           <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border border-indigo-200 focus:border-indigo-500 focus:bg-white focus:outline-none", placeholder: "••••••••", required: true %>
        </div> 
        <%= f.submit "Sign Up", class: "w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
              px-4 py-3 mt-6" %>
        <% end %>
        <hr class="my-6 border-gray-300 w-full">
        <%= render "devise/shared/links" %>
    </div>
  </div>

</section>