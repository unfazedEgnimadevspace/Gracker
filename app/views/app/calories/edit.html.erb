<%provide(:title, "Update calorie record")%>
<section class="bg-white dark:bg-gray-900">
  <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
      <h2 class="mb-4 text-3xl tracking-tight font-light text-center text-gray-300 dark:text-white">Record new calorie</h2>
      <p class="mb-8 lg:mb-16 font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl">Record details about your meal</p>
      <%= form_with(model: @calorie, url: app_calorie_url(@calorie), local: true, class: 'space-y-8', data: {turbo: false}) do |f| %>
        <%= render "devise/shared/error_messages", resource: @calorie %>
        <div class="flex w-full justify-between align-center gap-3">
          <div class="w-full">
            <%= f.label :food_name, class: 'block mb-2 text-sm font-medium text-gray-900'%>
            <%= f.text_field :food_name, class: 'block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500', placeholder: "Salmon Fish"%>
          </div>
          <div class="w-full">
            <%= f.label :calories, class: 'block mb-2 text-sm font-medium text-gray-900 '%>
            <%= f.number_field :calories, class: 'block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500'%>
          </div>
        </div> 
        <div class="flex w-full justify-between align-center gap-3">
          <div class="w-full">
            <%= f.label :meal_type, class: 'block mb-2 text-sm font-medium text-gray-900'%>
            <%= f.text_field :meal_type, class: "block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500"%>
          </div>
          <div class="w-full">
            <%= f.label :consumed_at, class: 'block mb-2 text-sm font-medium text-gray-900'%>
            <%= f.date_field :consumed_at, class: "block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500"%>
          </div>
        </div>   
        <div>
          <%= f.label :notes, class: 'block mb-2 text-sm font-medium text-gray-900'%>
          <%= f.text_area :notes, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 h-36"%>
        </div>
         <%= f.submit "Update", class: "text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-indigo-600 dark:hover:bg-indigo-700 dark:focus:ring-indigo-800 cursor-pointer align-right"%>
      <% end %>
  </div>
</section>
